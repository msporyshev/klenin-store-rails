<%= form_tag search_url, method: form_method, class: "form-horizontal", id: "global-search-form" do %>

  <%= render "products_search_form_fields" %>

  <% if !hide_submit %>
    <div class="form-actions span12">
      <%= submit_tag "Search", name: nil, class: "btn", id: "global-search-submit-btn" %>
    </div>
  <% end -%>

<% end -%>