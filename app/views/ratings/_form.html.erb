<% @rating = Rating.find_or_initialize_by_product_id_and_user_id(product_id: @product.id, user_id: current_user.id) %>
<%= form_for @rating, remote: true, html: { class: "form-inline" } do |f| %>
  <%= f.hidden_field :product_id %>
  <%= f.hidden_field :user_id %>

  <%= f.number_field :rating, min: 1, max: 5, class: "span1" %>

  <%= f.submit "Rate", class: "btn" %>
<% end -%>